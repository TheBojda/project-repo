{
  "name": "project-repo",
  "version": "1.0.0",
  "private": true,
  "targets": {
    "client": {
      "source": [
        "./src/client/index.ts"
      ],
      "distDir": "./dist/client",
      "context": "browser"
    },
    "server": {
      "source": "./src/server/main.ts",
      "distDir": "./dist/server",
      "context": "node",
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "mysql_start": "docker run -p 3306:3306 --rm --name project-repo-mysql -e MYSQL_ROOT_PASSWORD=12345 -e MYSQL_DATABASE=project_repo -e MYSQL_USER=project_repo -e MYSQL_PASSWORD=12345 -v project_repo_mysql_data:/var/lib/mysql -d mysql:5.7",
    "mysql_stop": "docker stop project-repo-mysql",
    "migrations_run": "ts-node database/run_migrations.ts",
    "migrations_run_dev": "DOTENV_CONFIG_PATH=env.development ts-node database/run_migrations.ts",
    "watch": "parcel watch",
    "build": "parcel build",
    "dev": "DEV_MODE=true DOTENV_CONFIG_PATH=env.development npm run build && concurrently --kill-others \"npm run watch\" \"nodemon ./dist/server/main.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@parcel/transformer-vue": "^2.7.0",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "parcel": "^2.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@types/node": "^18.7.3",
    "bootstrap": "^5.2.0",
    "express": "^4.18.1",
    "firebase": "^9.9.2",
    "firebaseui": "^6.0.1",
    "md5": "^2.3.0",
    "mysql2": "^2.3.3",
    "node-html-parser": "^5.4.2-0",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0"
  }
}
